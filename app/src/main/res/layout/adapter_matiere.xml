<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/default_id_matiere"
            android:layout_width="64dp"
            android:layout_height="35dp"
            android:layout_toStartOf="@+id/default_name_niveau"
            android:layout_toLeftOf="@+id/default_name_niveau"
            android:gravity="center"
            android:text="ID"
            android:textSize="@dimen/content_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/default_nom_matiere"
            android:layout_width="146dp"
            android:layout_height="43dp"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:gravity="center_vertical"
            android:text="Matiere"
            android:textSize="@dimen/content_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/default_coef_matiere"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/default_id_matiere"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/default_coef_matiere"
            android:layout_width="120dp"
            android:layout_height="@dimen/liste_high"
            android:gravity="center"
            android:text="Coefficient"
            android:textSize="@dimen/content_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>